<resources>

    <!-- Base application theme. -->
    <style name="AppTheme" parent="Theme.AppCompat.Light.DarkActionBar">
        <!-- Customize your theme here. -->
        <item name="colorPrimary">@color/colorPrimary</item>
        <item name="colorPrimaryDark">@color/colorPrimaryDark</item>
        <item name="colorAccent">@color/colorAccent</item>
    </style>

    <style name="style_default_line">
        <item name="android:background">@color/dark_deep</item>
        <item name="android:layout_width">fill_parent</item>
        <item name="android:layout_height">1.0px</item>
    </style>

    <style name="style_blue_line">
        <item name="android:background">@drawable/login_bg_gradient</item>
        <item name="android:layout_width">fill_parent</item>
        <item name="android:layout_height">3.0px</item>
        <item name="android:layout_marginLeft">3dp</item>
        <item name="android:layout_marginRight">3dp</item>
    </style>

    <style name="style_setting_text">
        <item name="android:textSize">16.0sp</item>
        <item name="android:textColor">@color/black</item>
        <item name="android:gravity">left|center</item>
        <item name="android:paddingLeft">10.0dip</item>
    </style>

    <style name="style_red_btn">
        <item name="android:textSize">26.0sp</item>
        <item name="android:textColor">@color/white</item>
        <item name="android:gravity">center</item>
        <item name="android:paddingLeft">12.0dip</item>
        <item name="android:paddingRight">12.0dip</item>
        <item name="android:shadowDx">1.0</item>
        <item name="android:shadowDy">1.0</item>
        <item name="android:shadowRadius">0.5</item>
    </style>

    <style name="style_input">
        <item name="android:textSize">15.0sp</item>
        <item name="android:textColorHint">#7F7F7F</item>
        <item name="android:background">@drawable/demo_account_text_bg</item>
    </style>

    <style
        name="my_dialog"
        parent="android:style/Theme.Dialog">
        <item
            name="android:windowFrame">@null</item><!--边框 -->
        <item
            name="android:windowIsFloating">true</item><!--是否浮现在activity之上 -->
        <item
            name="android:windowIsTranslucent">true</item><!--半透明 -->
        <item
            name="android:windowNoTitle">true</item><!--无标题 -->
        <item
            name="android:windowBackground">@android:color/transparent</item><!--背景透明 -->
        <item
            name="android:backgroundDimEnabled">true</item><!--模糊 -->
    </style>

</resources>
