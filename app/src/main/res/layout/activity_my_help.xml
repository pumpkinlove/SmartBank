<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:background="@color/gray_bg">

    <include
        android:id="@+id/head_title"
        layout="@layout/layout_title" />
    <LinearLayout
        android:layout_weight="1"
        android:orientation="vertical"
        android:layout_width="match_parent"
        android:layout_height="match_parent">
        <android.support.v7.widget.CardView
            android:layout_weight="1"
            android:id="@+id/cv_calculator_finance"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:foreground="?android:attr/selectableItemBackground"
            app:cardCornerRadius="3dp"
            app:cardElevation="8dp"
            android:layout_marginLeft="8dp"
            android:layout_marginTop="5dp"
            android:layout_marginRight="8dp"
            android:layout_marginBottom="5dp"
            android:paddingBottom="5dp">
            <LinearLayout
                android:orientation="vertical"
                android:layout_width="match_parent"
                android:layout_height="match_parent">

            <LinearLayout
                android:layout_weight="1"
                android:orientation="horizontal"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_margin="7dp">
                <TextView
                    android:text="初始投资金额"
                    android:layout_weight="3"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:textSize="18sp"
                    android:textColor="@color/dark"
                    android:gravity="center_vertical"
                    android:paddingLeft="12dp"
                    android:singleLine="true" />
                <EditText
                    android:layout_weight="2"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:id="@+id/et_finace_money"
                    android:inputType="numberDecimal"
                    android:background="@null"
                    android:textSize="18sp"
                    android:gravity="center"
                    android:singleLine="true"
                    android:textColor="@color/material_deep_teal_500" />
                <TextView
                    android:text="元"
                    android:layout_weight="4"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:textSize="18sp"
                    android:textColor="@color/dark"
                    android:gravity="center_vertical"
                    android:paddingLeft="12dp"
                    android:singleLine="true" />
            </LinearLayout>
            <View
                android:layout_marginLeft="8dp"
                android:layout_marginRight="8dp"
                style="@style/style_default_line"/>
            <LinearLayout
                android:layout_weight="1"
                android:orientation="horizontal"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_margin="7dp">
                <TextView
                    android:text="投资年限"
                    android:layout_weight="3"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:textSize="18sp"
                    android:textColor="@color/dark"
                    android:gravity="center_vertical"
                    android:paddingLeft="12dp"
                    android:singleLine="true" />
                <EditText
                    android:layout_weight="2"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:id="@+id/et_finance_year"
                    android:background="@null"
                    android:inputType="numberDecimal"
                    android:textSize="18sp"
                    android:gravity="center"
                    android:singleLine="true"
                    android:textColor="@color/material_deep_teal_500" />
                <TextView
                    android:text="年"
                    android:layout_weight="4"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:textSize="18sp"
                    android:textColor="@color/dark"
                    android:gravity="center_vertical"
                    android:paddingLeft="12dp"
                    android:singleLine="true" />
            </LinearLayout>
            <View
                android:layout_marginLeft="8dp"
                android:layout_marginRight="8dp"
                style="@style/style_default_line"/>
            <LinearLayout
                android:layout_weight="1"
                android:orientation="horizontal"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_margin="7dp">
                <TextView
                    android:text="预期投资收益率"
                    android:layout_weight="3"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:textSize="18sp"
                    android:textColor="@color/dark"
                    android:gravity="center_vertical"
                    android:paddingLeft="12dp"
                    android:singleLine="true" />
                <EditText
                    android:layout_weight="2"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:id="@+id/et_finance_rate"
                    android:background="@null"
                    android:inputType="numberDecimal"
                    android:textSize="18sp"
                    android:gravity="center"
                    android:singleLine="true"
                    android:textColor="@android:color/holo_red_dark" />
                <TextView
                    android:text="%"
                    android:layout_weight="4"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:textSize="18sp"
                    android:textColor="@color/dark"
                    android:gravity="center_vertical"
                    android:paddingLeft="12dp"
                    android:singleLine="true" />
            </LinearLayout>
            <View
                android:layout_marginLeft="8dp"
                android:layout_marginRight="8dp"
                style="@style/style_default_line"/>
            <LinearLayout
                android:layout_weight="1"
                android:orientation="horizontal"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_margin="7dp">
                <TextView
                    android:text="结果"
                    android:layout_weight="3"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:textSize="18sp"
                    android:textColor="@color/dark"
                    android:gravity="center_vertical"
                    android:paddingLeft="12dp"
                    android:singleLine="true" />
            </LinearLayout>
            <View
                android:layout_marginLeft="8dp"
                android:layout_marginRight="8dp"
                style="@style/style_default_line"/>
            <LinearLayout
                android:layout_weight="1"
                android:orientation="horizontal"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_margin="7dp">
                <TextView
                    android:layout_weight="3"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:textSize="18sp"
                    android:textColor="@color/dark"
                    android:gravity="center_vertical"
                    android:paddingLeft="12dp"
                    android:singleLine="true"
                    android:id="@+id/tv_finance_result" />
            </LinearLayout>
            <View
                android:layout_marginLeft="8dp"
                android:layout_marginRight="8dp"
                style="@style/style_default_line"/>
                <LinearLayout
                    android:layout_weight="0.96"
                    android:orientation="horizontal"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:layout_margin="7dp">
                    <Button
                        android:text="计算"
                        android:layout_weight="1"
                        android:background="@drawable/blue_button_selector"
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:gravity="center"
                        android:textSize="22sp"
                        android:textColor="@color/white"
                        android:layout_margin="4dp"
                        android:id="@+id/btn_calculate"/>
                    <Button
                        android:text="清空"
                        android:layout_weight="1"
                        android:background="@drawable/red_button_selector"
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:layout_margin="4dp"
                        android:gravity="center"
                        android:textSize="22sp"
                        android:textColor="@color/white"
                        android:id="@+id/btn_clear" />
                </LinearLayout>
                <View
                    android:layout_marginLeft="8dp"
                    android:layout_marginRight="8dp"
                    style="@style/style_default_line"/>
            </LinearLayout>
        </android.support.v7.widget.CardView>

    </LinearLayout>
    <LinearLayout
        android:layout_weight="1"
        android:orientation="vertical"
        android:layout_width="match_parent"
        android:layout_height="match_parent">

    </LinearLayout>

</LinearLayout>
