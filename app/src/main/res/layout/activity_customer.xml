<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:orientation="vertical"
    android:background="@color/gray_bg"
    android:layout_width="match_parent"
    android:layout_height="match_parent">


    <include
        android:id="@id/head_title"
        layout="@layout/layout_title"/>
    <RelativeLayout
        android:layout_weight="1"
        android:layout_width="match_parent"
        android:layout_height="match_parent">
        <android.support.v7.widget.CardView
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            app:cardBackgroundColor="@color/white">
            <LinearLayout
                android:orientation="horizontal"
                android:layout_width="match_parent"
                android:layout_height="match_parent">

                <LinearLayout
                    android:layout_weight="1"
                    android:orientation="vertical"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent">

                    <TextView
                        android:layout_weight="1"
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:text="客户姓名"
                        android:gravity="center"
                        android:textSize="30sp"
                        android:textStyle="bold"
                        android:id="@+id/tv_c_name" />

                    <View
                        android:background="@color/gray_light"
                        android:layout_width="match_parent"
                        android:layout_height="1px"/>
                    <LinearLayout
                        android:layout_weight="1"
                        android:orientation="horizontal"
                        android:layout_width="match_parent"
                        android:layout_height="match_parent">
                        <TextView
                            android:layout_weight="1"
                            android:layout_width="match_parent"
                            android:layout_height="match_parent"
                            android:text="性别"
                            android:gravity="center"
                            android:id="@+id/tv_c_gender"
                            android:background="@drawable/white_bg_blue_ripple"
                            android:clickable="true" />

                        <View
                            android:background="@color/gray_light"
                            android:layout_width="1px"
                            android:layout_height="match_parent"/>

                        <TextView
                            android:layout_weight="1"
                            android:layout_width="match_parent"
                            android:layout_height="match_parent"
                            android:gravity="center"
                            android:text="年龄"
                            android:id="@+id/tv_c_age"
                            android:background="@drawable/white_bg_blue_ripple"
                            android:clickable="true" />
                    </LinearLayout>

                    <View
                        android:background="@color/gray_light"
                        android:layout_width="match_parent"
                        android:layout_height="1px"/>

                    <LinearLayout
                        android:layout_weight="1"
                        android:orientation="horizontal"
                        android:layout_width="match_parent"
                        android:layout_height="match_parent">
                        <TextView
                            android:layout_weight="1"
                            android:layout_width="match_parent"
                            android:layout_height="match_parent"
                            android:text="出生日期"
                            android:gravity="center" />
                        <View
                            android:background="@color/gray_light"
                            android:layout_width="1px"
                            android:layout_height="match_parent"/>
                        <TextView
                            android:layout_weight="1"
                            android:layout_width="match_parent"
                            android:layout_height="match_parent"
                            android:gravity="center"
                            android:text="生日"
                            android:id="@+id/tv_c_birthday"
                            android:background="@drawable/white_bg_blue_ripple"
                            android:clickable="true" />
                    </LinearLayout>

                    <View
                        android:background="@color/gray_light"
                        android:layout_width="match_parent"
                        android:layout_height="1px"/>

                    <LinearLayout
                        android:layout_weight="1"
                        android:orientation="horizontal"
                        android:layout_width="match_parent"
                        android:layout_height="match_parent">
                        <TextView
                            android:layout_weight="1"
                            android:layout_width="match_parent"
                            android:layout_height="match_parent"
                            android:text="身份证"
                            android:gravity="center" />
                        <View
                            android:background="@color/gray_light"
                            android:layout_width="1px"
                            android:layout_height="match_parent"/>
                        <TextView
                            android:layout_weight="1"
                            android:layout_width="match_parent"
                            android:layout_height="match_parent"
                            android:gravity="center"
                            android:text="身份证号码"
                            android:id="@+id/tv_c_idcardno"
                            android:background="@drawable/white_bg_blue_ripple"
                            android:clickable="true" />
                    </LinearLayout>

                    <View
                        android:background="@color/gray_light"
                        android:layout_width="match_parent"
                        android:layout_height="1px"/>

                    <LinearLayout
                        android:layout_weight="1"
                        android:orientation="horizontal"
                        android:layout_width="match_parent"
                        android:layout_height="match_parent">
                        <TextView
                            android:layout_weight="1"
                            android:layout_width="match_parent"
                            android:layout_height="match_parent"
                            android:text="地址"
                            android:gravity="center" />
                        <View
                            android:background="@color/gray_light"
                            android:layout_width="1px"
                            android:layout_height="match_parent"/>
                        <TextView
                            android:layout_weight="1"
                            android:layout_width="match_parent"
                            android:layout_height="match_parent"
                            android:gravity="center"
                            android:text="地址"
                            android:id="@+id/tv_c_address"
                            android:background="@drawable/white_bg_blue_ripple"
                            android:clickable="true" />
                    </LinearLayout>

                    <View
                        android:background="@color/gray_light"
                        android:layout_width="match_parent"
                        android:layout_height="1px"/>

                    <LinearLayout
                        android:layout_weight="1"
                        android:orientation="horizontal"
                        android:layout_width="match_parent"
                        android:layout_height="match_parent">
                        <TextView
                            android:layout_weight="1"
                            android:layout_width="match_parent"
                            android:layout_height="match_parent"
                            android:text="职业"
                            android:gravity="center" />
                        <View
                            android:background="@color/gray_light"
                            android:layout_width="1px"
                            android:layout_height="match_parent"/>
                        <TextView
                            android:layout_weight="1"
                            android:layout_width="match_parent"
                            android:layout_height="match_parent"
                            android:gravity="center"
                            android:text="职业"
                            android:id="@+id/tv_c_job"
                            android:background="@drawable/white_bg_blue_ripple"
                            android:clickable="true" />
                    </LinearLayout>

                    <View
                        android:background="@color/gray_light"
                        android:layout_width="match_parent"
                        android:layout_height="1px"/>

                    <LinearLayout
                        android:layout_weight="1"
                        android:orientation="horizontal"
                        android:layout_width="match_parent"
                        android:layout_height="match_parent">
                        <TextView
                            android:layout_weight="1"
                            android:layout_width="match_parent"
                            android:layout_height="match_parent"
                            android:text="国籍"
                            android:gravity="center" />
                        <View
                            android:background="@color/gray_light"
                            android:layout_width="1px"
                            android:layout_height="match_parent"/>
                        <TextView
                            android:layout_weight="1"
                            android:layout_width="match_parent"
                            android:layout_height="match_parent"
                            android:gravity="center"
                            android:text="国籍"
                            android:id="@+id/tv_c_nation"
                            android:background="@drawable/white_bg_blue_ripple"
                            android:clickable="true" />
                    </LinearLayout>

                    <View
                        android:background="@color/gray_light"
                        android:layout_width="match_parent"
                        android:layout_height="1px"/>

                    <LinearLayout
                        android:layout_weight="1"
                        android:orientation="horizontal"
                        android:layout_width="match_parent"
                        android:layout_height="match_parent">
                        <TextView
                            android:layout_weight="1"
                            android:layout_width="match_parent"
                            android:layout_height="match_parent"
                            android:text="民族"
                            android:gravity="center" />
                        <View
                            android:background="@color/gray_light"
                            android:layout_width="1px"
                            android:layout_height="match_parent"/>
                        <TextView
                            android:layout_weight="1"
                            android:layout_width="match_parent"
                            android:layout_height="match_parent"
                            android:gravity="center"
                            android:text="民族"
                            android:id="@+id/tv_c_race"
                            android:background="@drawable/white_bg_blue_ripple"
                            android:clickable="true" />
                    </LinearLayout>

                    <View
                        android:background="@color/gray_light"
                        android:layout_width="match_parent"
                        android:layout_height="1px"/>

                    <LinearLayout
                        android:layout_weight="1"
                        android:orientation="horizontal"
                        android:layout_width="match_parent"
                        android:layout_height="match_parent">
                        <TextView
                            android:layout_weight="1"
                            android:layout_width="match_parent"
                            android:layout_height="match_parent"
                            android:text="联系方式"
                            android:gravity="center" />
                        <View
                            android:background="@color/gray_light"
                            android:layout_width="1px"
                            android:layout_height="match_parent"/>
                        <TextView
                            android:layout_weight="1"
                            android:layout_width="match_parent"
                            android:layout_height="match_parent"
                            android:gravity="center"
                            android:text="联系方式"
                            android:id="@+id/tv_c_telphone"
                            android:background="@drawable/white_bg_blue_ripple"
                            android:clickable="true" />
                    </LinearLayout>

                </LinearLayout>

                <View
                    android:background="@color/gray_light"
                    android:layout_width="1px"
                    android:layout_height="match_parent"/>

                <LinearLayout
                    android:layout_weight="2"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent">
                    <ImageView
                        android:scaleType="fitCenter"
                        android:adjustViewBounds="true"
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:id="@+id/iv_c_photo" />

                </LinearLayout>

            </LinearLayout>





        </android.support.v7.widget.CardView>
    </RelativeLayout>
    <TextView
        android:text="已办理理财产品"
        android:layout_marginLeft="10dp"
        android:layout_width="match_parent"
        android:layout_height="wrap_content" />
    <RelativeLayout
        android:layout_weight="1.2"
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <android.support.v7.widget.CardView
            android:layout_width="match_parent"
            android:layout_height="match_parent">

            <TextView
                android:textSize="18sp"
                android:gravity="center"
                android:text="②③⑥⑦⑧"
                android:layout_width="match_parent"
                android:layout_height="match_parent" />




        </android.support.v7.widget.CardView>

    </RelativeLayout>

    <TextView
        android:text="推荐理财产品"
        android:layout_marginLeft="10dp"
        android:layout_width="match_parent"
        android:layout_height="wrap_content" />

    <RelativeLayout
        android:layout_weight="1.2"
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <android.support.v7.widget.CardView
            android:layout_width="match_parent"
            android:layout_height="match_parent">

            <TextView
                android:textSize="18sp"
                android:gravity="center"
                android:text="①④⑤⑨⑩"
                android:layout_width="match_parent"
                android:layout_height="match_parent" />


        </android.support.v7.widget.CardView>

    </RelativeLayout>


</LinearLayout>
